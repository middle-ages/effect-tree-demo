{
  "display": "browser.main",
  "extends": ["./tsconfig.browser.json"],
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "../src/**/*.css",
    "../index.tsx"
  ],
  "exclude": [
    "../src/test.ts",
    "../src/storybook.ts",
    "../src/test.setup.ts",
    "../src/test",
    "../src/storybook",
    "../src/**/stories",
    "../**/*.stories.ts",
    "../**/*.stories.tsx",
    "../src/**/*.test.ts",
    "../src/**/*.test.tsx",
    "../src/**/*.test-d.ts",
    "../src/**/*.test-d.tsx"
  ]
}
